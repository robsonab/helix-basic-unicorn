
@model Sitecore.Data.Items.Item
@{ 
    Sitecore.Data.Fields.LinkField slideLink1 = Model.Fields["Slide 1 Link"];
    Sitecore.Data.Fields.LinkField slideLink2 = Model.Fields["Slide 2 Link"];
    Sitecore.Data.Fields.LinkField slideLink3 = Model.Fields["Slide 3 Link"];
}

<div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            @Html.Sitecore().Field("Slide 1 Image", Model)

            <div class="carousel-caption">
                <p class="animated fadeInRight">@Html.Sitecore().Field("Slide 1 Body", Model)</p>
                <h1 class="animated fadeInLeft">@Html.Sitecore().Field("Slide 1 Title", Model)</h1>

                @Html.Sitecore().BeginField("Slide 1 Link", Model, new { haschildren = true, @class = "btn animated fadeInUp" })
                <span>@slideLink1.Text</span>
                @Html.Sitecore().EndField()

            </div>
        </div>
        <div class="carousel-item">
            @Html.Sitecore().Field("Slide 2 Image", Model)

            <div class="carousel-caption">
                <p class="animated fadeInRight">@Html.Sitecore().Field("Slide 2 Body", Model)</p>
                <h1 class="animated fadeInLeft">@Html.Sitecore().Field("Slide 2 Title", Model)</h1>

                @Html.Sitecore().BeginField("Slide 2 Link", Model, new { haschildren = true, @class = "btn animated fadeInUp" })
                <span>@slideLink2.Text</span>
                @Html.Sitecore().EndField()

            </div>
        </div>

        <div class="carousel-item">
            @Html.Sitecore().Field("Slide 3 Image", Model)

            <div class="carousel-caption">
                <p class="animated fadeInRight">@Html.Sitecore().Field("Slide 3 Body", Model)</p>
                <h1 class="animated fadeInLeft">@Html.Sitecore().Field("Slide 3 Title", Model)</h1>

                @Html.Sitecore().BeginField("Slide 3 Link", Model, new { haschildren = true, @class = "btn animated fadeInUp" })
                <span>@slideLink3.Text</span>
                @Html.Sitecore().EndField()

            </div>
        </div>

